<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseClicked="#switchToDetail" prefHeight="180.0" prefWidth="180.0" styleClass="transparent" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.shopSetting.MyProductController">
   <children>
      <AnchorPane prefHeight="180.0" prefWidth="180.0" styleClass="product-card-background">
         <children>
            <Label fx:id="myProductNameLabel" layoutX="11.0" prefHeight="42.0" prefWidth="160.0" styleClass="description-text-card" text="P-990 Razer" AnchorPane.leftAnchor="11.0">
               <font>
                  <Font name="Agency FB Bold" size="21.0" />
               </font>
            </Label>
            <ImageView fx:id="myProductImageView" fitHeight="98.0" fitWidth="152.0" layoutX="11.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="myProductPriceLabel" alignment="CENTER_RIGHT" layoutX="18.0" layoutY="139.0" prefHeight="10.0" prefWidth="160.0" styleClass="description-text-card" text="1,000,000 ฿" AnchorPane.rightAnchor="12.0">
               <font>
                  <Font name="Agency FB Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="stockLabel" alignment="CENTER_RIGHT" layoutX="7.0" layoutY="155.0" prefHeight="10.0" prefWidth="160.0" styleClass="description-text-card" text="มี 1 ชิ้น">
               <font>
                  <Font name="Agency FB Bold" size="16.0" />
               </font>
            </Label>
            <Circle fx:id="lowProductAlertIcon" layoutX="167.0" layoutY="2.0" opacity="0.0" radius="6.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" styleClass="notification-low-product" />
         </children>
      </AnchorPane>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
