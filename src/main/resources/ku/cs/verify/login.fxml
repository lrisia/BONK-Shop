               <font>
                  <Font size="38.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
            <PasswordField fx:id="inputPasswordField" layoutX="60.0" layoutY="150.0" prefHeight="45.0" prefWidth="230.0" promptText="Password" style="-fx-background-radius: 50;">
               <font>
                  <Font size="13.0" />
               </font>
            </PasswordField>
            <Label fx:id="notificationLabel" alignment="CENTER" layoutX="5.0" layoutY="69.0" prefHeight="19.0" prefWidth="337.0" text="เข้าสู่ระบบเพื่อยืนยันตัวตน" textFill="#7c7c7c" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="3.0">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
